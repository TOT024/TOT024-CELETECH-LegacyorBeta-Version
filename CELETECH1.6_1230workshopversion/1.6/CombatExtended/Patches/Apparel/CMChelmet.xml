<?xml version="1.0" encoding="utf-8"?>
<Patch>
  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>CeleTech Arsenal MKIII</li>
    </mods>
    <match Class="PatchOperationSequence">
      <operations>
        <li Class="PatchOperationConditional">
          <xpath>Defs/ThingDef[defName="CMChelmet"]/statBases</xpath>
          <nomatch Class="PatchOperationAdd">
            <xpath>Defs/ThingDef[defName="CMChelmet"]</xpath>
            <value>
              <statBases />
            </value>
          </nomatch>
        </li>
        <li Class="PatchOperationReplace">
          <xpath>Defs/ThingDef[defName="CMChelmet"]/statBases</xpath>
          <value>
            <statBases>
              <MaxHitPoints>870</MaxHitPoints>
              <Flammability>0</Flammability>
              <DeteriorationRate>2</DeteriorationRate>
              <Beauty>-3</Beauty>
              <WorkToMake>29250</WorkToMake>
              <Mass>4.8</Mass>
              <ArmorRating_Sharp>25</ArmorRating_Sharp>
              <ArmorRating_Blunt>100</ArmorRating_Blunt>
              <ArmorRating_Heat>2</ArmorRating_Heat>
              <Insulation_Cold>30</Insulation_Cold>
              <Insulation_Heat>1000</Insulation_Heat>
              <EquipDelay>12</EquipDelay>
            </statBases>
          </value>
        </li>
        <li Class="PatchOperationAddModExtension">
          <xpath>Defs/ThingDef[defName="CMChelmet"]</xpath>
          <value>
            <li Class="CombatExtended.PartialArmorExt">
              <stats>
                <li>
                  <ArmorRating_Sharp>1.95</ArmorRating_Sharp>
                  <parts>
                    <li>Head</li>
                    <li>Skull</li>
                    <li>Brain</li>
                    <li>Ear</li>
                    <li>Nose</li>
                    <li>Jaw</li>
                    <li>Tongue</li>
                  </parts>
                </li>
                <li>
                  <ArmorRating_Sharp>0.5</ArmorRating_Sharp>
                  <parts>
                    <li>Eye</li>
                  </parts>
                </li>
              </stats>
            </li>
          </value>
        </li>
        <li Class="PatchOperationConditional">
          <xpath>Defs/ThingDef[defName="CMChelmet"]/equippedStatOffsets</xpath>
          <nomatch Class="PatchOperationAdd">
            <xpath>Defs/ThingDef[defName="CMChelmet"]</xpath>
            <value>
              <equippedStatOffsets />
            </value>
          </nomatch>
        </li>
        <li Class="PatchOperationReplace">
          <xpath>Defs/ThingDef[defName="CMChelmet"]/equippedStatOffsets</xpath>
          <value>
            <equippedStatOffsets>
              <PainShockThreshold>0.05</PainShockThreshold>
              <ShootingAccuracyPawn>4</ShootingAccuracyPawn>
              <ToxicEnvironmentResistance>1</ToxicEnvironmentResistance>
              <VacuumResistance>1</VacuumResistance>
              <SmokeSensitivity>0</SmokeSensitivity>
              <AimingAccuracy>0.25</AimingAccuracy>
              <CarryBulk>20</CarryBulk>
              <CarryWeight>40</CarryWeight>
            </equippedStatOffsets>
          </value>
        </li>
      </operations>
    </match>
  </Operation>
</Patch>