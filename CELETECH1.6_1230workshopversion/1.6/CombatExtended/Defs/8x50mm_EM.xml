<?xml version="1.0" encoding="utf-8"?>
<Defs>

	<ThingCategoryDef>
		<defName>Ammo8x50mmElectromagnetic</defName>
		<label>8x50mm EM-CMC</label>
		<parent>AmmoAdvanced</parent>
		<iconPath>Things/Ammo/8x50mmUI</iconPath>
	</ThingCategoryDef>

	<!-- ==================== AmmoSet ========================== -->

	<CombatExtended.AmmoSetDef>
		<defName>AmmoSet_8x50mmElectromagnetic</defName>
		<label>8x50mm Electromagnetic</label>
		<ammoTypes>
			<Ammo_8x50mmElectromagnetic_AP>Bullet_8x50mmElectromagnetic_AP</Ammo_8x50mmElectromagnetic_AP>
			<Ammo_8x50mmElectromagnetic_Ion>Bullet_8x50mmElectromagnetic_Ion</Ammo_8x50mmElectromagnetic_Ion>
		</ammoTypes>
		<similarTo>AmmoSet_ChargedRifle</similarTo>
	</CombatExtended.AmmoSetDef>

	<!-- ==================== Ammo ========================== -->

	<ThingDef Class="CombatExtended.AmmoDef" Name="8x50mmElectromagneticBase" ParentName="SpacerAmmoBase" Abstract="True">
		<description>High power electromagnetic projectile ammunition used by advanced railgun battle rifles, machineguns and sniper rifles.</description>
		<statBases>
			<Mass>0.03</Mass>
			<Bulk>0.022</Bulk>
		</statBases>
		<tradeTags>
			<li>CE_AutoEnableTrade</li>
			<li>CE_AutoEnableCrafting_FabricationBench</li>
		</tradeTags>
		<thingCategories>
			<li>Ammo8x50mmElectromagnetic</li>
		</thingCategories>
		<stackLimit>4000</stackLimit>
	</ThingDef>

	<ThingDef Class="CombatExtended.AmmoDef" ParentName="8x50mmElectromagneticBase">
		<defName>Ammo_8x50mmElectromagnetic_AP</defName>
		<label>8x50mm Electromagnetic (AP)</label>
		<graphicData>
			<texPath>Things/Ammo/8x50mm_AP</texPath>
			<graphicClass>Graphic_StackCount</graphicClass>
		</graphicData>
		<ammoClass>CMC_EMBullet_AP</ammoClass>
	</ThingDef>

	<ThingDef Class="CombatExtended.AmmoDef" ParentName="8x50mmElectromagneticBase">
		<defName>Ammo_8x50mmElectromagnetic_Ion</defName>
		<label>8x50mm Electromagnetic (Ion)</label>
		<graphicData>
			<texPath>Things/Ammo/8x50mm_EMP</texPath>
			<graphicClass>Graphic_StackCount</graphicClass>
		</graphicData>
		<ammoClass>CMC_EMBullet_Ion</ammoClass>
		<generateAllowChance>0.4</generateAllowChance>
	</ThingDef>

	<!-- ================== Projectiles ================== -->

	<ThingDef Name="Base8x50mmElectromagneticBullet" ParentName="BaseBulletCE" Abstract="true">
		<graphicData>
			<texPath>Things/Projectile/Charged/ChargeShot</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>(1.25,1.25)</drawSize>
		</graphicData>
		<projectile Class="CombatExtended.ProjectilePropertiesCE">
			<damageDef>Bullet</damageDef>
			<speed>320</speed>
		</projectile>
	</ThingDef>

	<ThingDef ParentName="Base8x50mmElectromagneticBullet">
		<defName>Bullet_8x50mmElectromagnetic_AP</defName>
		<label>8x50mm Electromagnetic projectile (AP)</label>
		<projectile Class="CombatExtended.ProjectilePropertiesCE">
			<damageAmountBase>16</damageAmountBase>
			<secondaryDamage>
				<li>
					<def>Bomb_Secondary</def>
					<amount>2</amount>
				</li>
			</secondaryDamage>
			<armorPenetrationSharp>55</armorPenetrationSharp>
			<armorPenetrationBlunt>135</armorPenetrationBlunt>
		</projectile>
	</ThingDef>

	<ThingDef ParentName="Base8x50mmElectromagneticBullet">
		<defName>Bullet_8x50mmElectromagnetic_Ion</defName>
		<label>8x50mm Electromagnetic projectile (Ion)</label>
		<projectile Class="CombatExtended.ProjectilePropertiesCE">
			<damageAmountBase>15</damageAmountBase>
			<secondaryDamage>
				<li>
					<def>EMP</def>
					<amount>12</amount>
				</li>
			</secondaryDamage>
			<armorPenetrationSharp>49</armorPenetrationSharp>
			<armorPenetrationBlunt>135</armorPenetrationBlunt>
			<empShieldBreakChance>1</empShieldBreakChance>
		</projectile>
	</ThingDef>

	<!-- ==================== Recipes ========================== -->

	<RecipeDef ParentName="ChargeAmmoRecipeBase">
		<defName>MakeAmmo_8x50mmElectromagnetic_AP</defName>
		<label>make 8x50mm Electromagnetic (AP) cartridge x400</label>
		<description>Craft 400 8x50mm Electromagnetic (AP) cartridges.</description>
		<jobString>Making 8x50mm Electromagnetic (AP) cartridges.</jobString>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>Plasteel</li>
					</thingDefs>
				</filter>
				<count>28</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>ComponentSpacer</li>
					</thingDefs>
				</filter>
				<count>12</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>Uranium</li>
					</thingDefs>
				</filter>
				<count>4</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>Plasteel</li>
				<li>ComponentSpacer</li>
				<li>Uranium</li>
			</thingDefs>
		</fixedIngredientFilter>
		<products>
			<Ammo_8x50mmElectromagnetic_AP>400</Ammo_8x50mmElectromagnetic_AP>
		</products>
		<workAmount>18500</workAmount>
	</RecipeDef>

	<RecipeDef ParentName="ChargeAmmoRecipeBase">
		<defName>MakeAmmo_8x50mmElectromagnetic_Ion</defName>
		<label>make 8x50mm Electromagnetic (Ion) cartridge x400</label>
		<description>Craft 400 8x50mm Electromagnetic (Ion) cartridges.</description>
		<jobString>Making 8x50mm Electromagnetic (Ion) cartridges.</jobString>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>Plasteel</li>
					</thingDefs>
				</filter>
				<count>28</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>ComponentSpacer</li>
					</thingDefs>
				</filter>
				<count>2</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>Uranium</li>
					</thingDefs>
				</filter>
				<count>4</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>Plasteel</li>
				<li>ComponentSpacer</li>
				<li>Uranium</li>
			</thingDefs>
		</fixedIngredientFilter>
		<products>
			<Ammo_8x50mmElectromagnetic_Ion>400</Ammo_8x50mmElectromagnetic_Ion>
		</products>
		<workAmount>20500</workAmount>
	</RecipeDef>

</Defs>