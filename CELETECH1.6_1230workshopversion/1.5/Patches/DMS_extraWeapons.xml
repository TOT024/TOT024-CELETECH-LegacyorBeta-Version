<?xml version="1.0" encoding="UTF-8"?>
<Patch>
  <Operation Class="PatchOperationFindMod">
    <mods>
      <li>The Dead Man's Switch</li>
    </mods>
    <match Class="PatchOperationSequence">
      <success>Always</success>
      <operations>
		<li Class="PatchOperationAdd">
          <xpath>Defs/ThingDef[defName="DMS_Mech_Arquebusier"]/modExtensions/li[@Class="DMS.MechWeaponExtension"]/UsableWeaponTags</xpath>
			<value>
				<li>CMC_Charged</li>
				<li>CMC_Charged_Grenade</li>
				<li>CMC_Charged_HMG</li>
			</value>
        </li>
		<li Class="PatchOperationAdd">
          <xpath>Defs/ThingDef[defName="DMS_Mech_Jaeger" or defName="DMS_Mech_Pioneer"]/modExtensions/li[@Class="DMS.MechWeaponExtension"]/UsableWeaponTags</xpath>
			<value>
				<li>CMC_Charged</li>
				<li>CMC_PDW</li>
			</value>
        </li>
		<li Class="PatchOperationAdd">
          <xpath>Defs/ThingDef[defName="DMS_Mech_Sniper"]/modExtensions/li[@Class="DMS.MechWeaponExtension"]/UsableWeaponTags</xpath>
			<value>
				<li>CMC_Charged</li>
				<li>CMC_Charged_Sniper</li>
				<li>CMC_Charged_Grenade</li>
				<li>CMC_Charged_HMG</li>
			</value>
        </li>
		<li Class="PatchOperationAdd">
          <xpath>Defs/ThingDef[defName="DMS_Mech_Protector" or defName="DMS_Mech_Phalanx" or defName="DMS_Mech_Sergeant"]/modExtensions/li[@Class="DMS.MechWeaponExtension"]/UsableWeaponTags</xpath>
			<value>
				<li>CMC_PDW</li>
			</value>
        </li>
		<li Class="PatchOperationAdd">
          <xpath>Defs/ThingDef[defName="DMS_Mech_Soldat"]/modExtensions/li[@Class="DMS.MechWeaponExtension"]/UsableWeaponTags</xpath>
			<value>
				<li>CMC_Charged</li>
				<li>CMC_Charged_Grenade</li>
				<li>CMC_Charged_HMG</li>
			</value>
        </li>
		<li Class="PatchOperationAdd">
          <xpath>Defs/ThingDef[defName="DMS_Mech_Kanonier"]/modExtensions/li[@Class="DMS.MechWeaponExtension"]/UsableWeaponTags</xpath>
			<value>
				<li>CMC_Charged_Grenade</li>
			</value>
        </li>
      </operations>
    </match>
  </Operation>
</Patch>