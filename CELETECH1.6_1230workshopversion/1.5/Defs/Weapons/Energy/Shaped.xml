<Defs>
  <ThingDef ParentName="TOT_Weapons">
    <defName>CMC_ShapedLaserRifle</defName>
    <label>QBZL-55 particle beam rifle</label>
    <description>First generation of particle beam rifle, which is able to penetrate its target with energized particle. It is very effective against close-ranged targets.</description>
    <graphicData>
      <texPath>Things/Weapons/CMC_SLR</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>1</drawSize>
    </graphicData>
    <uiIconScale>1</uiIconScale>
    <soundInteract>Interact_Rifle</soundInteract>
	<generateCommonality>0</generateCommonality>
	<recipeMaker>
      <researchPrerequisites>
		<li>CMC_DEWII</li>
		<li>CMC_Heavy_I</li>
	  </researchPrerequisites>
	<skillRequirements>
        <Crafting>8</Crafting>
      </skillRequirements>
    </recipeMaker>
    <statBases>
	  <WorkToMake>10000</WorkToMake>
      <Mass>9.5</Mass>
      <RangedWeapon_Cooldown>0.65</RangedWeapon_Cooldown>
    </statBases>
	<costList>
      <Steel>75</Steel>
	  <Plasteel>75</Plasteel>
      <ComponentIndustrial>5</ComponentIndustrial>
	  <ComponentSpacer>5</ComponentSpacer>
      <Silver>20</Silver>
    </costList>
    <weaponTags>
      <li>SpacerGun</li>
    </weaponTags>
    <verbs>
      <li>
        <verbClass>TOT_DLL_test.Verb_Laser_Sustain</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <warmupTime>0.03</warmupTime>
        <range>37</range>
        <!--这个是攻击次数-->
        <burstShotCount>120</burstShotCount>
        <!--这个是攻击间隔-->
        <ticksBetweenBurstShots>3</ticksBetweenBurstShots>
        <soundCastTail>GunTail_Medium</soundCastTail>
        <muzzleFlashScale>0</muzzleFlashScale>
      </li>
    </verbs>
	<comps>
      <li Class="TOT_DLL_test.CompProperties_LaserData_Sustain">
        <!--激光光束样式-->
        <LaserLine_MoteDef>CMC_Laser_Stay_MoteBlue</LaserLine_MoteDef>
        <!--光束末端的效果+基础大小-->
        <LaserFleck_End>CMC_Laser_Stay_LaserEndLarge_TT</LaserFleck_End>
        <!--光束基础大小-->
        <LaserFleck_End_Scale_Base>8.0</LaserFleck_End_Scale_Base>
        <!--光束末端粒子的效果+基础大小+大小偏移量+数量+产生几率-->
        <LaserFleck_Spark>CMC_Stay_Laser_Spark</LaserFleck_Spark>
        <!--光束末端粒子的基础大小-->
        <LaserFleck_Spark_Scale_Base>0.3</LaserFleck_Spark_Scale_Base>
        <!--光束末端粒子大小偏移量-->
        <LaserFleck_Spark_Scale_Deviation>0.2</LaserFleck_Spark_Scale_Deviation>
        <!--光束末端粒子数量-->
        <LaserFleck_Spark_Num>3</LaserFleck_Spark_Num>
        <!--光束末端粒子产生几率-->
        <LaserFleck_Spark_Spawn_Chance>0.4</LaserFleck_Spark_Spawn_Chance>
        <!--这是开火时的音效-->
        <SoundDef>TT</SoundDef>
        <!--这是光束颜色调整（直接输入数值0-255）+不透明度（0-1）（如果是已经上好色的激光贴图的话，全部颜色写成255应该就行）-->
        <Color_Red>255</Color_Red>
        <Color_Green>255</Color_Green>
        <Color_Blue>255</Color_Blue>
        <Color_Alpha>1</Color_Alpha>
        <!--这个是光束的起点偏移，用于适配不同枪械长度的出口位置-->
        <StartPositionOffset_Range>0.9</StartPositionOffset_Range>
        <!--这个是造成伤害的类型-->
        <DamageDef>InfernoBeam</DamageDef>
        <!--这个是造成伤害的数值-->
        <DamageNum>3</DamageNum>
        <!--这个是护甲穿透-->
        <DamageArmorPenetration>1.2</DamageArmorPenetration>
      </li>
	  <li Class="TOT_DLL_test.CompProperties_ColorSaver"></li>
    </comps>
	<tools>
      <li>
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>12</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>19</power>
        <cooldownTime>2</cooldownTime>
		<extraMeleeDamages>
          <li>
            <def>Flame</def>
            <amount>10</amount>
            <chance>0.6</chance>
          </li>
		</extraMeleeDamages>
      </li>
    </tools>
  </ThingDef>
  
  <ThingDef ParentName="MoteBase">
    <defName>MYDE_FlashingOfSwordEffect</defName>
    <graphicData>
      <texPath>Things/Projectile/FlashingOfSwordEffect</texPath>
      <shaderType>MoteGlow</shaderType>
    </graphicData>
    <altitudeLayer>Projectile</altitudeLayer>
    <rotatable>false</rotatable>
    <mote>
      <fadeInTime>1.9</fadeInTime>
      <!--淡入时间-->
      <solidTime>0</solidTime>
      <!--曝光时间-->
      <fadeOutTime>0.4</fadeOutTime>
      <!--淡出时间-->
    </mote>
	<drawOffscreen>true</drawOffscreen>
  </ThingDef>
  
  <ThingDef ParentName="MoteBase">
    <defName>CMC_Laser_Stay_MoteNarrow</defName>
    <thingClass>MoteDualAttached</thingClass>
    <altitudeLayer>MoteOverhead</altitudeLayer>
    <mote>
      <!--这个是激光从0透明度到最大透明度的时间，可以做激光预热效果（光束从小变大），但伤害依旧正常运作，我也懒得写预热检测-->
      <fadeInTime>0.2</fadeInTime>
      <!--这个是激光从最大透明度到0透明度的时间，可以做激光的消散效果，但最好小于等于武器冷却时间-->
      <fadeOutTime>0.1</fadeOutTime>
      <solidTime>999999</solidTime>
      <needsMaintenance>True</needsMaintenance>
      <rotateTowardsTarget>True</rotateTowardsTarget>
      <scaleToConnectTargets>true</scaleToConnectTargets>
      <fadeOutUnmaintained>True</fadeOutUnmaintained>
    </mote>
    <drawOffscreen>true</drawOffscreen>
    <graphicData>
      <texPath>Things/Projectile/CMC_UDLaser_Narrow</texPath>
      <!--graphicClass>Graphic_Mote</graphicClass-->
      <!--这个是生物科技Dlc的特效的class，实际效果是一闪一闪的，我不喜欢（瞎眼睛），所以改成了静态，有需要可以改回去-->
      <graphicClass>Graphic_MoteWithAgeSecs</graphicClass>
      <shaderType>MoteBeam</shaderType>
    </graphicData>
  </ThingDef>
</Defs>