        <Color_Green>255</Color_Green>
        <Color_Blue>255</Color_Blue>
        <Color_Alpha>0.3</Color_Alpha>
        <!--这个是光束的起点偏移，用于适配不同枪械长度的出口位置-->
        <StartPositionOffset_Range>0.7</StartPositionOffset_Range>
        <!--这个是造成伤害的类型-->
        <DamageDef>InfernoBeam</DamageDef>
        <!--这个是造成伤害的数值-->
        <DamageNum>10</DamageNum>
        <!--这个是护甲穿透-->
        <DamageArmorPenetration>0.7</DamageArmorPenetration>
        <!--是否同时造成第二种伤害-->
        <IfSecondDamage>true</IfSecondDamage>
        <!--伤害类型-->
        <DamageDef_B>Flame</DamageDef_B>
        <!--伤害量-->
        <DamageNum_B>3</DamageNum_B>
        <!--这个是护甲穿透-->
        <DamageArmorPenetration_B>0.3</DamageArmorPenetration_B>
		<!--是否散射-->
        <IfCanScatter>true</IfCanScatter>
        <!--激光散射数量-->
        <ScatterNum>1</ScatterNum>
        <!--激光散射范围-->
        <ScatterRadius>0.89</ScatterRadius>
        <!--激光散射爆炸伤害类型-->
        <ScatterExplosionDef>BulletAoE_Void</ScatterExplosionDef>
        <!--激光散射爆炸伤害-->
        <ScatterExplosionDamage>7</ScatterExplosionDamage>
        <!--激光散射爆炸范围-->
        <ScatterExplosionRadius>1.0</ScatterExplosionRadius>
        <!--激光散射爆炸伤害穿透-->
        <ScatterExplosionArmorPenetration>1.5</ScatterExplosionArmorPenetration>
        <!--激光散射的间隔-->
        <ScatterTickMax>15</ScatterTickMax>
        <!--激光散射的特效-->
        <LaserFleck_ScatterLaser>CMC_Laser_instant_ScatterLaser_void</LaserFleck_ScatterLaser>
