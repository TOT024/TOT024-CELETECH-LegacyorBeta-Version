<Defs>
	<HediffDef ParentName="ImplantHediffBase">
    <defName>TianXuan</defName>
	<defaultLabelColor>(0, 1, 1)</defaultLabelColor>
    <label>&lt;color=#1DD5EE&gt;&lt;i&gt;Tian Xuan combat chip&lt;/i&gt;&lt;/color&gt;</label>
    <labelNoun>a brain implant chip Tian Xuan</labelNoun>
    <description>A chip that enhances the brain's neural activity to significantly improve the user's long-range combat capabilities, as well as amplifies consciousness and sight.</description>
    <descriptionHyperlinks><ThingDef>TianXuanChip</ThingDef></descriptionHyperlinks>
    <stages>
      <li>
		<capMods>
          <li>
            <capacity>Consciousness</capacity>
            <offset>0.40</offset>
          </li>
		  <li>
            <capacity>Sight</capacity>
            <offset>0.60</offset>
          </li>
		</capMods>
		<statOffsets>
			<AimingDelayFactor>-0.2</AimingDelayFactor>
			<ShootingAccuracyPawn>2.0</ShootingAccuracyPawn>
			<RangedCooldownFactor>-0.2</RangedCooldownFactor>
		</statOffsets>
      </li>
    </stages>
	<comps>
        <li Class="HediffCompProperties_GiveAbility">
          <abilityDefs>
            <li>TOT_TX_shootingbuff</li>
          </abilityDefs>
        </li>
    </comps>
    <spawnThingOnRemoved>TianXuanChip</spawnThingOnRemoved>
  </HediffDef>

  <ThingDef ParentName="BodyPartProstheticCMCBase">
    <defName>TianXuanChip</defName>
    <label>Tian Xuan chip</label>
    <description>A brain implant which can boost ranged combat performance.</description>
    <descriptionHyperlinks><RecipeDef>InstallTX</RecipeDef></descriptionHyperlinks>
	<statBases>
		<WorkToMake>6000</WorkToMake>
		<MarketValue>3000</MarketValue>
		<Mass>0.1</Mass>
	</statBases>
    <thingSetMakerTags>
      <li>RewardStandardLowFreq</li>
    </thingSetMakerTags>
    <costList>
      <Steel>20</Steel>
	  <Plasteel>40</Plasteel>
	  <Gold>40</Gold>
      <ComponentIndustrial>4</ComponentIndustrial>
	  <ComponentSpacer>8</ComponentSpacer>
	  <NanostructuringChip>1</NanostructuringChip>
    </costList>
    <techHediffsTags>
      <li>CMC</li>
    </techHediffsTags>
	<recipeMaker>
		  <researchPrerequisite>CMCBio</researchPrerequisite>
		  <skillRequirements>
			<Crafting>15</Crafting>
		  </skillRequirements>
		  <recipeUsers Inherit="False">
			<li>FabricationBench</li>
		  </recipeUsers>
		  <displayPriority>200</displayPriority>
	</recipeMaker>
  </ThingDef>

  <RecipeDef ParentName="SurgeryInstallImplantBase">
    <defName>InstallTX</defName>
    <label>install Tian Xuan chip</label>
    <description>Install a Tian Xuan chip.</description>
    <descriptionHyperlinks>
      <ThingDef>TianXuanChip</ThingDef>
      <HediffDef>TianXuan</HediffDef>
    </descriptionHyperlinks>
    <jobString>Installing Tian Xuan chip.</jobString>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>TianXuanChip</li>
          </thingDefs>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>TianXuanChip</li>
      </thingDefs>
    </fixedIngredientFilter>
    <appliedOnFixedBodyParts>
      <li>Brain</li>
    </appliedOnFixedBodyParts>
    <addsHediff>TianXuan</addsHediff>
	<incompatibleWithHediffTags>
	  <li>YuHeng</li>
    </incompatibleWithHediffTags>
  </RecipeDef>

  <RecipeDef ParentName="SurgeryRemoveImplantBase">
    <defName>RemoveTX</defName>
    <label>remove Tian Xuan chip</label>
    <description>Remove the Tian Xuan chip.</description>
    <descriptionHyperlinks>
      <ThingDef>TianXuanChip</ThingDef>
      <HediffDef>TianXuan</HediffDef>
    </descriptionHyperlinks>
    <jobString>Removing Tian Xuan chip.</jobString>
    <removesHediff>TianXuan</removesHediff>
  </RecipeDef>
</Defs>