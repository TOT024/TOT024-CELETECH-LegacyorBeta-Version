<Defs>
    <ThingDef ParentName="ArmorMachineableBase">
		<defName>CMC_HPA_Base</defName>
		<label>BD-01Y "Xuangang" Power Armor (Standard)</label>
		<description>CMC standard power armor. Features lightweight nullium plating providing balanced protection against small-arms kinetic and energy fire at close range. Maintains high tactical mobility suitable for assault and recon operations.\n\nThe armor's inner layer contains pressurized hemostatic compound that automatically deploys to prevent bleeding.</description>
		<generateCommonality>0</generateCommonality>
		<generateAllowChance>0</generateAllowChance>
		<graphicData>
			<texPath>Things/Apparel/Display/CMC_uniformHPA_Display</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<techLevel>Spacer</techLevel>
		<tradeability>Sellable</tradeability>
		<costList>
			<Steel>225</Steel>
			<Plasteel>125</Plasteel>
			<ComponentSpacer>4</ComponentSpacer>
			<Uranium>15</Uranium>
			<Gold>20</Gold>
		</costList>
		<tickerType>Normal</tickerType>
		<statBases>
			<MaxHitPoints>3500</MaxHitPoints>
			<WorkToMake>88000</WorkToMake>
			<Mass>12.5</Mass>
			<Flammability>0</Flammability>
			<ArmorRating_Sharp>1.45</ArmorRating_Sharp>
			<ArmorRating_Blunt>1.35</ArmorRating_Blunt>
			<ArmorRating_Heat>1.98</ArmorRating_Heat>
			<Insulation_Cold>70</Insulation_Cold>
			<Insulation_Heat>1200</Insulation_Heat>
			<EquipDelay>15</EquipDelay>
		</statBases>
		<equippedStatOffsets>
			<MentalBreakThreshold>-0.25</MentalBreakThreshold>
		    <MoveSpeed>0.5</MoveSpeed>
		    <CarryingCapacity>110</CarryingCapacity>
		</equippedStatOffsets>
		<thingCategories Inherit="False">
			<li>ApparelArmor</li>
		</thingCategories>
		<thingSetMakerTags>
			<li>RewardSpecial</li>
		</thingSetMakerTags>
		<apparel>
			<bodyPartGroups>
				<li>Neck</li>
				<li>Torso</li>
				<li>Shoulders</li>
				<li>Arms</li>
				<li>Legs</li>
				<li>Feet</li>
				<li>Hands</li>
			</bodyPartGroups>
			<wornGraphicPath>Things/Apparel/CMC_PowerarmourBase/CMC_uniform</wornGraphicPath>
			<useWornGraphicMask>true</useWornGraphicMask>
			<layers>
			    <li>Middle</li>
				<li>Shell</li>
			</layers>
			<tags>
				<li>SpacerMilitary</li>
				<li>RoyalTier2</li>
				<li>RoyalTier3</li>
				<li>RoyalTier4</li>
				<li>RoyalTier5</li>
				<li>RoyalTier6</li>
				<li>RoyalTier7</li>
			</tags>
			<defaultOutfitTags>
				<li>Soldier</li>
			</defaultOutfitTags>
			<useDeflectMetalEffect>true</useDeflectMetalEffect>
		</apparel>
		<recipeMaker>
			<unfinishedThingDef>UnfinishedTechArmor</unfinishedThingDef>
			<researchPrerequisite>CMCarmorII</researchPrerequisite>
			<skillRequirements>
				<Crafting>12</Crafting>
			</skillRequirements>
			<recipeUsers Inherit="False">
				<li>FabricationBench</li>
			</recipeUsers>
		</recipeMaker>
		<colorGenerator Class="ColorGenerator_Options">
			<options>
				<li>
					<weight>10</weight>
					<only>(1,1,1)</only>
				</li>
			</options>
		</colorGenerator>
		<comps>
			<li Class="TOT_DLL_test.CompProperties_BodyShapeAjuster"></li>
			<li Class="CompProperties_CauseHediff_Apparel">
				<hediff>CMC_BleedProof</hediff>
				<part>Torso</part>
			</li>
		</comps>
	</ThingDef>
	
