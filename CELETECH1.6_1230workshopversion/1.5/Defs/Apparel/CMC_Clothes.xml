<Defs>
	<ThingDef ParentName="ApparelMakeableBase">
		<defName>CMC_Uniform</defName>
		<label>CeleTechΔ nano-uniform</label>
		<description>A nano-material tight-fitting combat uniform which can insulate extreme heat and provide sufficient protection.</description>
        <costList>
			<Plasteel>20</Plasteel>
            <Cloth>80</Cloth>
			<Gold>5</Gold>
			<Silver>10</Silver>
			<ComponentSpacer>3</ComponentSpacer>
        </costList>
		<!--tickerType>Normal</tickerType-->
        <recipeMaker>
            <researchPrerequisite>CMCarmor</researchPrerequisite>
            <useIngredientsForColor>false</useIngredientsForColor>
        </recipeMaker>
        <statBases>
            <ArmorRating_Sharp>0.4</ArmorRating_Sharp>
            <ArmorRating_Blunt>1.07</ArmorRating_Blunt>
            <ArmorRating_Heat>4.5</ArmorRating_Heat>
            <MaxHitPoints>1200</MaxHitPoints>
            <WorkToMake>29000</WorkToMake>
            <Mass>0.7</Mass>
            <Insulation_Cold>80</Insulation_Cold>
            <Insulation_Heat>300</Insulation_Heat>
            <EquipDelay>1.5</EquipDelay>
        </statBases>
		<thingCategories Inherit="False">
			<li>ApparelArmor</li>
		</thingCategories>
        <equippedStatOffsets></equippedStatOffsets>
        <techLevel>Spacer</techLevel>
        <generateAllowChance>0</generateAllowChance>
		<graphicData>
			<texPath>Things/Apparel/Display/CMC_uniform_display</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>1</drawSize>
		</graphicData>
        <apparel>
            <canBeGeneratedToSatisfyWarmth>false</canBeGeneratedToSatisfyWarmth>
            <bodyPartGroups>
                <li>Torso</li>
                <li>Shoulders</li>
				<li>Arms</li>
                <li>Legs</li>
            </bodyPartGroups>
            <layers>
                <li>OnSkin</li>
            </layers>
            <defaultOutfitTags>
                <li>Soldier</li>
            </defaultOutfitTags>
			<tags>
				<li>SpacerMilitary</li>
				<li>RoyalTier2</li>
				<li>RoyalTier3</li>
				<li>RoyalTier4</li>
				<li>RoyalTier5</li>
				<li>RoyalTier6</li>
				<li>RoyalTier7</li>
			</tags>
            <wornGraphicPath>Things/Apparel/CMCuni/CMC_uniform</wornGraphicPath>
        </apparel>
		<comps>
		<li Class="TOT_DLL_test.CompProperties_BodyShapeAjuster">
		  </li>
        </comps>
        <colorGenerator Class="ColorGenerator_Options">
            <options>
                <li>
                    <only>(1,1,1)</only>
                </li>
            </options>
        </colorGenerator>
    </ThingDef>
	
