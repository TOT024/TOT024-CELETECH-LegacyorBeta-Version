	<ThingDef ParentName="ApparelMakeableBase">
		<defName>CMC_Uniform_MKII</defName>
		<label>CeleTechΔ operator nano-armor</label> 
		<description>A combat coat designed for CMC Operators, it has in-built optical camouflage device to maximize wearer's survivability.</description>
        <costList>
			<Plasteel>70</Plasteel>
            <Cloth>110</Cloth>
			<Gold>10</Gold>
			<Silver>10</Silver>
			<ComponentSpacer>3</ComponentSpacer>
        </costList>
		<tickerType>Normal</tickerType>
        <recipeMaker>
            <researchPrerequisite>CMCarmor</researchPrerequisite>
            <useIngredientsForColor>false</useIngredientsForColor>
        </recipeMaker>
        <statBases>
            <ArmorRating_Sharp>0.82</ArmorRating_Sharp>
            <ArmorRating_Blunt>1.27</ArmorRating_Blunt>
            <ArmorRating_Heat>4.5</ArmorRating_Heat>
            <MaxHitPoints>1200</MaxHitPoints>
            <WorkToMake>31000</WorkToMake>
            <Mass>1.01</Mass>
            <Insulation_Cold>40</Insulation_Cold>
            <Insulation_Heat>190</Insulation_Heat>
            <EquipDelay>1.5</EquipDelay>
        </statBases>
		<thingCategories Inherit="False">
			<li>ApparelArmor</li>
		</thingCategories>
        <equippedStatOffsets></equippedStatOffsets>
        <techLevel>Spacer</techLevel>
        <generateAllowChance>0</generateAllowChance>
		<graphicData>
			<texPath>Things/Apparel/CMC_Coat/CMC_Coat_Display</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>1</drawSize>
			<shaderType>CutoutComplex</shaderType>
		</graphicData>
        <apparel>
            <canBeGeneratedToSatisfyWarmth>false</canBeGeneratedToSatisfyWarmth>
            <bodyPartGroups>
                <li>Torso</li>
                <li>Shoulders</li>
                <li>Arms</li>
                <li>Legs</li>
            </bodyPartGroups>
            <layers>
                <li>Shell</li>
            </layers>
            <defaultOutfitTags>
                <li>Soldier</li>
            </defaultOutfitTags>
			<tags>
				<li>SpacerMilitary</li>
				<li>RoyalTier2</li>
				<li>RoyalTier3</li>
				<li>RoyalTier4</li>
				<li>RoyalTier5</li>
				<li>RoyalTier6</li>
				<li>RoyalTier7</li>
			</tags>
            <wornGraphicPath>Things/Apparel/CMC_Coat/CMC_Coat</wornGraphicPath>
			<useWornGraphicMask>true</useWornGraphicMask>
			<shellRenderedBehindHead>true</shellRenderedBehindHead>
        </apparel>
		<comps>
		  <li Class="CompProperties_ApparelReloadable">
			<maxCharges>6</maxCharges>
			<ammoDef>Silver</ammoDef>
			<ammoCountPerCharge>40</ammoCountPerCharge>
			<baseReloadTicks>120</baseReloadTicks>
			<soundReload>Standard_Reload</soundReload>
			<hotKey>Misc4</hotKey>
			<chargeNoun>coolant</chargeNoun>
			<displayGizmoWhileUndrafted>false</displayGizmoWhileUndrafted>
		  </li>
		  <li Class="TOT_DLL_test.CompProperties_BodyShapeAjuster">
		  </li>
        </comps>
        <colorGenerator Class="ColorGenerator_Options">
            <options>
                <li>
                    <only>(0.99,0.99,0.99)</only>
                </li>
            </options>
        </colorGenerator>
    </ThingDef>
</Defs>