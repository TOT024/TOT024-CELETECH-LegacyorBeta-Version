<Defs>
<ThingDef ParentName="BuildingBase">
    <defName>CMC_RocketswarmLauncher</defName>
    <label>"Ganjiang Infernowave"rocket launcher</label>
	<thingClass>TOT_DLL_test.Building_CMCRocketLauncher</thingClass>
    <description>A stationary launch platform armed with four devastating high-explosive rockets. Capable of arching projectiles over terrain obstacles to strike entrenched targets, though the absence of guidance systems results in significant trajectory deviation. Recommended for saturation bombardment against area targets.</description>
    <drawerType>MapMeshAndRealTime</drawerType>
    <graphicData>
      <texPath>Things/Buildings/CMC_MLbase</texPath>
        <graphicClass>Graphic_Multi</graphicClass>
        <drawSize>(5.3,5.3)</drawSize>
    </graphicData>
    <uiIconPath>Things/Buildings/CMC_MortarUI</uiIconPath>
    <altitudeLayer>Building</altitudeLayer>
    <stealable>false</stealable>
    <size>(3,3)</size>
    <statBases>
      <MaxHitPoints>3200</MaxHitPoints>
      <Flammability>2.7</Flammability>
      <WorkToBuild>10000</WorkToBuild>
      <Mass>58</Mass>
      <Beauty>20</Beauty>
      <ShootingAccuracyTurret>0.76</ShootingAccuracyTurret>
    </statBases>
    <tickerType>Normal</tickerType>
    <comps>
      <li Class="CompProperties_Explosive">
        <wickTicks>0</wickTicks>
        <explosiveRadius>6.9</explosiveRadius>
		<explosiveExpandPerFuel>1.32</explosiveExpandPerFuel>
        <explosiveDamageType>Flame</explosiveDamageType>
        <chanceNeverExplodeFromDamage>0</chanceNeverExplodeFromDamage>
      </li>
      <li Class="CompProperties_Forbiddable"/>
      <li Class="CompProperties_Power">
        <compClass>CompPowerTrader</compClass>
        <basePowerConsumption>1500</basePowerConsumption>
      </li>
      <li Class="CompProperties_Flickable"/>
      <li Class="CompProperties_Breakdownable"/>
      <li Class="CompProperties_Refuelable">
        <fuelLabel>Rockets</fuelLabel>
        <fuelGizmoLabel>Rockets</fuelGizmoLabel>
        <outOfFuelMessage>no ammo</outOfFuelMessage>
        <fuelFilter><thingDefs><li>CMC_RocketShell</li></thingDefs></fuelFilter>
        <fuelCapacity>36</fuelCapacity>
        <fuelMultiplier>1</fuelMultiplier>
        <initialFuelPercent>1</initialFuelPercent>
        <autoRefuelPercent>1</autoRefuelPercent>
        <showFuelGizmo>true</showFuelGizmo>
        <minimumFueledThreshold>0.5</minimumFueledThreshold>
        <factorByDifficulty>false</factorByDifficulty>
        <consumeFuelOnlyWhenUsed>true</consumeFuelOnlyWhenUsed>
        <fuelIconPath>Things/Others/CMC_Rocket/CMC_Rocket_b</fuelIconPath>
      </li>
    </comps>
    <passability>PassThroughOnly</passability>
    <pathCost>50</pathCost>
    <fillPercent>0.4</fillPercent>
    <hasTooltip>true</hasTooltip>
    <costList>
      <Plasteel>20</Plasteel>
      <Steel>200</Steel>
      <ComponentIndustrial>2</ComponentIndustrial>
      <Chemfuel>180</Chemfuel>
    </costList>
    <terrainAffordanceNeeded>Heavy</terrainAffordanceNeeded>
    <designationCategory>CMC_DefensenProduction</designationCategory>
    <constructionSkillPrerequisite>5</constructionSkillPrerequisite>
    <building>
      <ai_combatDangerous>false</ai_combatDangerous>
      <turretGunDef>Gun_CMCRocketswarmLauncher</turretGunDef>
      <turretTopDrawSize>4.95</turretTopDrawSize>
      <turretBurstCooldownTime>9.5</turretBurstCooldownTime>
      <playTargetAcquiredSound>false</playTargetAcquiredSound>
    </building>
	<damageMultipliers>
      <li>
        <damageDef>Bomb</damageDef>
        <multiplier>4.2</multiplier>
      </li>
      <li>
        <damageDef>Bullet</damageDef>
        <multiplier>1.8</multiplier>
      </li>
	  <li>
        <damageDef>EMP</damageDef>
        <multiplier>0</multiplier>
      </li>
	  <li>
        <damageDef>Stun</damageDef>
        <multiplier>0</multiplier>
      </li>
    </damageMultipliers>
    <placeWorkers Inherit="False">
      <li>PlaceWorker_TurretTop</li>
    </placeWorkers>
    <researchPrerequisites>
      <li>RocketswarmLauncher</li>
	  <li>CMCGunTurrets</li>
    </researchPrerequisites>
	<modExtensions>
      <li Class="TOT_DLL_test.TurretExtension_CMC">
        <rotationSpeed>0.44</rotationSpeed>
      </li>
    </modExtensions>
  </ThingDef>
  
  <ThingDef ParentName="BaseWeaponTurret">
